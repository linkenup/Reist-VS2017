@{
    ViewBag.Title = "Hotel";
}

<div style="background-image: url(../../Content/Images/aviao.png); width: 100%; padding-bottom:30px; background-position: center; background-repeat: no-repeat; background-size: cover; position: relative; ">
    <div class="container body-content">
        <br />
        <h1 style="color: #fff; font-family: 'Montserrat Alternates', sans-serif;">Hospedagens</h1>
        <h4 style="color: #fff; font-family: 'Montserrat', sans-serif;">Faça uma busca e encontre a hospedagem ideal para você!</h4>
        <br />
        <div style="background-color: rgba(255, 255, 255, 0.70); border-radius: 20px; padding: 30px; font-family: 'Montserrat', sans-serif;">
            @using (Html.BeginForm("ListarHotel", "Hotel", FormMethod.Get))
            {
            <div class="row" style="">
                <div class="col mb-1">
                    <label class="form-label">Destino: </label>
                    <input class="form-control" type="text" name="destino" placeholder="Informe o destino" style="border-radius: 10px; border: none; ">
                </div>
                <div class="col mb-1">
                    <label class="form-label">Checkin: </label>
                    <input class="form-control" type="date" name="checkin" placeholder="Informe a data" style=" border-radius: 10px; border: none;">
                </div>
                <div class="col mb-1">
                    <label class="form-label">Checkout: </label>
                    <input class="form-control" type="date" name="checkout" id="volta" placeholder="Informe a data" style=" border-radius: 10px; border: none;">
                </div>
                <div class="col mb-1">
                    <label class="form-label">Quartos: </label>
                    <input class="form-control" type="number" name="quartos" placeholder="Número" value="1" min="1" style=" border-radius: 10px; border: none;">
                </div>
                <div class="col mb-1">
                    <label class="form-label">Hospedes: </label>
                    <input class="form-control" type="number" name="hospedes" placeholder="Número" value="1" min="1" style=" border-radius: 10px; border: none;">
                </div>
                <div class="col mb-1">
                    <button type="submit" class="btn" style="background-color: #44338F; color: #fff;">Buscar</button>
                </div>
            </div>
            }
        </div>
    </div>
</div>