@model Reist_VS2017.Models.Cliente

@{
    ViewBag.Title = "Cadastro";
}

<div class="container body-content">

    <div class="container body-content" style=" display: flex; justify-content: center; align-items: center; ">
        <div style=" font-family: 'Montserrat', sans-serif; background-color: #FBFAFF; width: 100%; box-shadow: 0px 6px 6px rgba(68, 51, 143, 0.6); border-radius: 10px; margin-top: 30px; padding: 20px;">

            @using (Html.BeginForm("Cadastrar", "Cliente", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h2 class="d-flex justify-content-center" style="font-weight: 700;">Cadastro</h2>

                <div class="row g-3">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-12">
                        <label class="form-label">Nome: </label>
                        @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Email: </label>
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Celular: </label>
                        @Html.EditorFor(model => model.celular, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.celular, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Senha: </label>
                        @Html.EditorFor(model => model.senha, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Confirmar senha: </label>
                        <input class="form-control" type="password" name="confsenha">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Sexo: </label>
                        @Html.DropDownListFor(model => model.sexo, new SelectList(new List<string>(){
                            "","Masculino","Feminino","Prefiro não informar"
                        }), new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.sexo, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Data de nascimento: </label>
                        <input class="form-control" type="date" name="nascimento" placeholder="Seu aniversário" />
                        @Html.ValidationMessageFor(model => model.nascimento, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">CPF: </label>
                        @Html.EditorFor(model => model.cpf, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cpf, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">CEP: </label>
                        @Html.EditorFor(model => model.endereco.cep, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.endereco.cep, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">UF: </label>
                        @Html.DropDownListFor(model => model.endereco.uf, new SelectList(new List<string>(){
                            "","AC","AL","AP","AM","BA","CE","DF","ES","GO","MA","MT","MS","MG","PA","PB","PR","PE","PI","RJ","RN","RS","RO","RR","SC","SP","SE","TO"
                        }), new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.endereco.uf, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-8">
                        <label class="form-label">Logradouro: </label>
                        @Html.EditorFor(model => model.endereco.logradouro, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.endereco.logradouro, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Número: </label>
                        @Html.EditorFor(model => model.endereco.numero, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.endereco.numero, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Cidade: </label>
                        @Html.EditorFor(model => model.endereco.cidade, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.endereco.cidade, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Bairro/Distrito: </label>
                        @Html.EditorFor(model => model.endereco.bairro, new { htmlAttributes = new { @class = "form-control mb-3" } })
                        @Html.ValidationMessageFor(model => model.endereco.bairro, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn mb-1" style="background-color: #44338F; color: #fff;">Cadastrar</button>
                </div>
            }
            <div class="d-flex justify-content-center">
                <a style="color: #44338F;" href="@Url.Action("Login", "Login")">Já tenho uma conta</a>
            </div>
        </div>
    </div>
</div>